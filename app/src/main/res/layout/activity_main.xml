<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#224881"
        android:fontFamily="sans-serif"
        android:padding="16dp"
        android:text="STARK DESIGNS"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="32sp" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/blueprint" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:padding="10dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="We design everything from kitchens to bathrooms!"
        android:textAlignment="center"
        android:textColor="#224881"
        android:textSize="16sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/img1" />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/img2" />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/img3" />
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp">
        <TableRow>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/call"/>
            <TextView
                android:text="Tel     :  +447567776579"
                android:paddingTop="16dp"
                android:paddingLeft="16dp"
                android:textAppearance="@style/ContactFont"/>
        </TableRow>
        <TableRow>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/mail"/>
            <TextView
                android:text="Email : Stark@Designs.com"
                android:paddingTop="16dp"
                android:paddingLeft="16dp"
                android:textAppearance="@style/ContactFont"/>
        </TableRow>
        <TableRow>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/site" />
            <TextView
                android:text="Web : www.StarkDesigns.com"
                android:paddingTop="16dp"
                android:paddingLeft="16dp"
                android:textAppearance="@style/ContactFont"/>
        </TableRow>
    </TableLayout>

</LinearLayout>